<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:background="@android:color/white">

    <RelativeLayout android:id="@+id/rel_head"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/color_FF4081">

        <LinearLayout android:id="@+id/lin_back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingRight="30dp"
            android:layout_marginLeft="10dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/left_next_icon"/>

        </LinearLayout>

        <TextView android:id="@+id/tv_head"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="宝贝详情"
            android:textSize="18sp"
            android:textColor="@android:color/white"
            android:layout_centerInParent="true"
            android:ellipsize="end"
            android:maxLines="1"
            android:gravity="center" />

    </RelativeLayout>

    <ScrollView
        android:id="@+id/scrollView_agd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/rel_head"
        android:layout_marginBottom="48dp"
        android:focusableInTouchMode="true"
        android:focusable="true"
        android:scrollbars="none">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="18dp"
                android:src="@mipmap/dianpu_icon"
                android:layout_marginTop="13dp"
                android:layout_marginLeft="11dp"/>

            <TextView
                android:id="@+id/tv_agd_nickName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textColor="@color/color_707070"
                android:layout_marginTop="13dp"
                android:layout_marginLeft="41dp"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_toRightOf="@id/tv_agd_nickName"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="13dp">

                <ImageView
                    android:layout_width="13dp"
                    android:layout_height="14dp"
                    android:src="@mipmap/xing_icon"/>

                <ImageView
                    android:layout_width="13dp"
                    android:layout_height="14dp"
                    android:layout_marginLeft="4dp"
                    android:src="@mipmap/xing_icon"/>

                <ImageView
                    android:layout_width="13dp"
                    android:layout_height="14dp"
                    android:layout_marginLeft="4dp"
                    android:src="@mipmap/xing_icon"/>

            </LinearLayout>

            <View
                android:id="@+id/view_agd"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/color_dbd8d8"
                android:layout_below="@id/tv_agd_nickName"
                android:layout_marginTop="10dp"/>

            <ImageView
                android:id="@+id/img_agd_img"
                android:layout_width="375dp"
                android:layout_height="283dp"
                android:layout_below="@id/view_agd"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"/>

            <TextView
                android:id="@+id/tv_agd_count"
                android:layout_width="43dp"
                android:layout_height="21dp"
                android:textColor="@android:color/white"
                android:gravity="center"
                android:layout_alignParentRight="true"
                android:layout_marginRight="13dp"
                android:layout_below="@id/view_agd"
                android:layout_marginTop="250dp"
                android:background="@drawable/bg_img_count"/>

            <View
                android:id="@+id/view_agd2"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/color_dbd8d8"
                android:layout_below="@id/img_agd_img"
                android:layout_marginTop="10dp"/>

            <TextView
                android:id="@+id/tv_agd_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/color_010101"
                android:textSize="14sp"
                android:layout_margin="10dp"
                android:layout_below="@id/view_agd2"/>

            <TextView
                android:id="@+id/tv_agd_presentPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/color_E51C23"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginLeft="11dp"
                android:layout_below="@id/tv_agd_content"/>

            <ImageView
                android:layout_width="14dp"
                android:layout_height="17dp"
                android:src="@mipmap/location_icon"
                android:layout_below="@id/tv_agd_presentPrice"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"/>

            <TextView android:id="@+id/tv_agd_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/color_FF4081"
                android:textSize="14sp"
                android:layout_below="@id/tv_agd_presentPrice"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="30dp"/>

            <View
                android:id="@+id/view_agd3"
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:background="@color/color_F5F5F5"
                android:layout_below="@id/tv_agd_address"
                android:layout_marginTop="15dp"/>

            <ImageView
                android:layout_width="18dp"
                android:layout_height="19dp"
                android:src="@mipmap/dianpu_icon"
                android:layout_below="@id/view_agd3"
                android:layout_marginTop="13dp"
                android:layout_marginLeft="11dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="卖家宝贝"
                android:textSize="14sp"
                android:textColor="@color/color_707070"
                android:layout_below="@id/view_agd3"
                android:layout_marginTop="13dp"
                android:layout_marginLeft="41dp"/>
            
            <LinearLayout
                android:id="@+id/lin_search"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/view_agd3"
                android:layout_marginTop="13dp"
                android:layout_marginRight="11dp"
                android:layout_alignParentRight="true">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="更多"
                    android:textColor="@color/color_707070"
                    android:textSize="14sp"
                    android:layout_marginRight="5dp"
                    android:layout_gravity="center"/>
                
                <ImageView
                    android:layout_width="8dp"
                    android:layout_height="13dp"
                    android:src="@mipmap/right_next"
                    android:layout_gravity="center"/>

            </LinearLayout>

            <View
                android:id="@+id/view_agd4"
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:background="@color/color_F5F5F5"
                android:layout_below="@id/lin_search"
                android:layout_marginTop="15dp"/>

            <com.youmai.project.view.MyGridView
                android:id="@+id/mg_agd_goods"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingRight="10dp"
                android:paddingLeft="10dp"
                android:horizontalSpacing="10dp"
                android:numColumns="2"
                android:background="@color/color_F5F5F5"
                android:cacheColorHint="#00000000"
                android:listSelector="#00000000"
                android:scrollbars="none"
                android:layout_below="@id/view_agd4">
            </com.youmai.project.view.MyGridView>


        </RelativeLayout>

    </ScrollView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_alignParentBottom="true"
        android:background="@android:color/white">

        <LinearLayout
            android:id="@+id/lin_agd_share"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_marginLeft="10dp">

            <ImageView
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:src="@mipmap/share_icon"
                android:layout_gravity="center"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="分享"
                android:textSize="15sp"
                android:textColor="@color/color_010101"
                android:gravity="center"
               android:layout_marginLeft="10dp"/>
            
        </LinearLayout>
        
        <com.youmai.project.view.ClickTextView
            android:id="@+id/tv_agd_buy"
            android:layout_width="124dp"
            android:layout_height="match_parent"
            android:text="购买"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:gravity="center"
            android:layout_alignParentRight="true"
            android:background="@color/color_FF4081"/>

    </RelativeLayout>

</RelativeLayout>
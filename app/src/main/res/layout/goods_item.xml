<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:fitsSystemWindows="true">

    <RelativeLayout
        android:layout_width="177dp"
        android:layout_height="218dp"
        android:background="@android:color/white">

        <ImageView
            android:id="@+id/img_gi_photo"
            android:layout_width="99dp"
            android:layout_height="110dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="19dp"/>

        <TextView
            android:id="@+id/tv_gi_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/color_E51C23"
            android:textSize="15sp"
            android:layout_below="@id/img_gi_photo"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="16dp"/>

        <TextView
            android:id="@+id/tv_gi_des"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/color_010101"
            android:textSize="12sp"
            android:layout_below="@id/tv_gi_money"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="15dp"
            android:maxLines="2"/>

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@color/color_F5F5F5"/>

</LinearLayout>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:fitsSystemWindows="true"
    android:background="@color/color_F5F5F5">

    <include layout="@layout/head"/>

    <RelativeLayout
        android:id="@+id/rel_abg_one"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="70dp">

        <ImageView android:id="@+id/img_abg_goods"
            android:layout_width="116dp"
            android:layout_height="116dp"/>

        <TextView android:id="@+id/tv_abg_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="@color/color_777777"
            android:layout_toRightOf="@id/img_abg_goods"
            android:layout_marginLeft="13dp"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_toRightOf="@id/tv_abg_name"
            android:layout_marginLeft="12dp">

            <ImageView
                android:id="@+id/img_au_x1"
                android:layout_width="13dp"
                android:layout_height="14dp"
                android:src="@mipmap/no_select_x"/>

            <ImageView
                android:id="@+id/img_au_x2"
                android:layout_width="13dp"
                android:layout_height="14dp"
                android:layout_marginLeft="4dp"
                android:src="@mipmap/no_select_x"/>

            <ImageView
                android:id="@+id/img_au_x3"
                android:layout_width="13dp"
                android:layout_height="14dp"
                android:layout_marginLeft="4dp"
                android:src="@mipmap/no_select_x"/>

            <ImageView
                android:id="@+id/img_au_x4"
                android:layout_width="13dp"
                android:layout_height="14dp"
                android:layout_marginLeft="4dp"
                android:src="@mipmap/no_select_x"/>

            <ImageView
                android:id="@+id/img_au_x5"
                android:layout_width="13dp"
                android:layout_height="14dp"
                android:layout_marginLeft="4dp"
                android:src="@mipmap/no_select_x"/>

        </LinearLayout>

        <TextView android:id="@+id/tv_abg_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_abg_name"
            android:layout_marginTop="10dp"
            android:text="10月份京东购买的KAKA牌尤克里里。主要不太会用。"
            android:textSize="14sp"
            android:textColor="@color/color_020202"
            android:maxLines="3"
            android:lineSpacingExtra="0.5dp"
            android:lineSpacingMultiplier="1.5"
            android:layout_toRightOf="@id/img_abg_goods"
            android:layout_marginLeft="13dp"/>

        <TextView android:id="@+id/tv_abg_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="￥100"
            android:textColor="@color/color_E51C23"
            android:textSize="15sp"
            android:textStyle="bold"
            android:layout_toRightOf="@id/img_abg_goods"
            android:layout_marginLeft="10dp"
            android:layout_alignBottom="@id/img_abg_goods"/>

    </RelativeLayout>

    <View
        android:id="@+id/view_abg"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/color_dbd8d8"
        android:layout_below="@id/rel_abg_one"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="16dp"/>

    <RelativeLayout
        android:id="@+id/rel_abg_trans"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/view_abg"
        android:layout_marginTop="12dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="交易方式"
            android:textSize="15sp"
            android:textColor="@color/color_444444"
            android:layout_centerVertical="true"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:text="上门取货"
                android:textSize="15sp"
                android:textColor="@color/color_444444"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="上门取货之前请电话联系卖家"
                android:textSize="12sp"
                android:textColor="@color/color_bab7b7"/>

        </LinearLayout>

    </RelativeLayout>


    <View
        android:layout_width="wrap_content"
        android:layout_height="8dp"
        android:layout_below="@id/rel_abg_trans"
        android:background="@color/color_ececec"
        android:layout_marginTop="20dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="28dp"
        android:layout_below="@id/rel_abg_trans"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp">

        <LinearLayout
            android:id="@+id/rel_abg_balance"
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/img_abg_balance_select"
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:layout_gravity="center"
                android:src="@mipmap/select_yes" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="30dp"
                android:gravity="center"
                android:text="余额支付"
                android:textColor="@color/color_444444"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/tv_abg_balance"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="(余额¥450.00)"
                android:textSize="13sp"
                android:textColor="@color/color_bab7b7"
                android:layout_marginLeft="19dp"
                android:gravity="center"/>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/color_dbd8d8"/>

        <LinearLayout
            android:id="@+id/rel_abg_zhi"
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/img_abg_zhi_select"
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:layout_gravity="center"
                android:src="@mipmap/select_no" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="30dp"
                android:gravity="center"
                android:text="支付宝"
                android:textColor="@color/color_444444"
                android:textSize="15sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="(赠送1000积分)"
                android:textSize="13sp"
                android:textColor="@color/color_bab7b7"
                android:layout_marginLeft="30dp"
                android:gravity="center"/>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/color_dbd8d8"/>

        <LinearLayout
            android:id="@+id/rel_abg_weixin"
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/img_abg_wei_select"
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:layout_gravity="center"
                android:src="@mipmap/select_no" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="30dp"
                android:gravity="center"
                android:text="微信"
                android:textColor="@color/color_444444"
                android:textSize="15sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="(赠送1000积分)"
                android:textSize="13sp"
                android:textColor="@color/color_bab7b7"
                android:layout_marginLeft="40dp"
                android:gravity="center"/>

        </LinearLayout>

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="47dp"
        android:layout_alignParentBottom="true">

        <TextView
            android:id="@+id/tv_abg_money2"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textSize="15sp"
            android:gravity="center"
            android:textColor="@color/color_33333"
            android:layout_marginLeft="20dp"/>

        <com.youmai.project.view.ClickTextView
            android:id="@+id/tv_abg_buy"
            android:layout_width="124dp"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:background="@color/color_FF4081"
            android:gravity="center"
            android:text="支付"
            android:textColor="@android:color/white"
            android:textSize="16sp" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/color_dbd8d8"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="47dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="70dp"
        android:gravity="center"
        android:text="支付成功后即可在订单里与卖家进行沟通交流"
        android:textSize="11sp"
        android:textColor="@color/color_444444"/>



</RelativeLayout>
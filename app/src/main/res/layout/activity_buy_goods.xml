<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:fitsSystemWindows="true"
    android:background="@color/color_F5F5F5">

    <include layout="@layout/head"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="45dp"
        android:layout_marginTop="22dp"
        android:text="支付"
        android:textSize="22sp"
        android:textColor="@color/color_666666"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="45dp"
        android:layout_marginTop="10dp"
        android:text="支付成功后即可在订单里与卖家进行沟通交流"
        android:textSize="12sp"
        android:textColor="@color/color_666666"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="45dp"
        android:layout_marginRight="45dp"
        android:layout_marginTop="19dp">

        <ImageView android:id="@+id/img_abg_goods"
            android:layout_width="115dp"
            android:layout_height="118dp"
            android:src="@mipmap/git_icon"/>

        <TextView android:id="@+id/tv_abg_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="漫步生活馆"
            android:textSize="14sp"
            android:textColor="@color/color_666666"
            android:layout_toRightOf="@id/img_abg_goods"
            android:layout_marginLeft="10dp"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_toRightOf="@id/tv_abg_name"
            android:layout_marginLeft="10dp">

            <ImageView
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:src="@mipmap/xing_icon"/>

            <ImageView
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:src="@mipmap/xing_icon"/>

            <ImageView
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:src="@mipmap/xing_icon"/>

        </LinearLayout>

        <TextView android:id="@+id/tv_abg_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_abg_name"
            android:layout_marginTop="8dp"
            android:text="10月份京东购买的KAKA牌尤克里里。主要不太会用。"
            android:textSize="14sp"
            android:textColor="@android:color/black"
            android:maxLines="3"
            android:lineSpacingMultiplier="1.2"
            android:layout_toRightOf="@id/img_abg_goods"
            android:layout_marginLeft="10dp"/>

        <TextView android:id="@+id/tv_abg_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="￥100"
            android:textColor="@color/color_E51C23"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_toRightOf="@id/img_abg_goods"
            android:layout_marginLeft="10dp"
            android:layout_alignBottom="@id/img_abg_goods"/>

    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/rel_abg_balance"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp">

        <ImageView
            android:id="@+id/img_ar_balance"
            android:layout_width="20dp"
            android:layout_height="17dp"
            android:src="@mipmap/icon" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="8dp"
            android:layout_toRightOf="@id/img_ar_balance"
            android:text="余额支付"
            android:textColor="@color/color_33333"
            android:textSize="14sp" />

        <ImageView
            android:id="@+id/img_abg_balance_select"
            android:layout_width="18dp"
            android:layout_height="19dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@mipmap/select_yes" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginTop="13dp"
        android:background="@color/color_ececec"/>

    <RelativeLayout
        android:id="@+id/rel_abg_weixin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp">

        <ImageView
            android:id="@+id/img_ar_wei"
            android:layout_width="20dp"
            android:layout_height="17dp"
            android:src="@mipmap/weixin" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="8dp"
            android:layout_toRightOf="@id/img_ar_wei"
            android:text="微信支付"
            android:textColor="@color/color_33333"
            android:textSize="14sp" />

        <ImageView
            android:id="@+id/img_abg_wei_select"
            android:layout_width="18dp"
            android:layout_height="19dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@mipmap/select_no" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginTop="13dp"
        android:background="@color/color_ececec"/>

    <RelativeLayout
        android:id="@+id/rel_abg_zhi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="22dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp">

        <ImageView
            android:id="@+id/img_ar_zhi"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:src="@mipmap/zhifubao" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/img_ar_zhi"
            android:text="支付宝支付"
            android:textColor="@color/color_33333"
            android:textSize="14sp" />

        <ImageView
            android:id="@+id/img_abg_zhi_select"
            android:layout_width="18dp"
            android:layout_height="19dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@mipmap/select_no" />

    </RelativeLayout>

    <com.youmai.project.view.ClickTextView
        android:id="@+id/tv_abg_buy"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/bg_tabs"
        android:gravity="center"
        android:text="支付"
        android:textColor="@android:color/white"
        android:textSize="15sp" />


</LinearLayout>
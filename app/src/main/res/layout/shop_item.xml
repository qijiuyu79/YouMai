<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="190dp"
        android:background="@android:color/white">

        <ImageView android:id="@+id/img_si_icon"
            android:layout_width="130dp"
            android:layout_height="180dp"
            android:layout_marginLeft="10dp"
            android:src="@mipmap/shop_item_icon"/>

        <TextView android:id="@+id/tv_si_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/img_si_icon"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="10dp"
            android:text="Apple iPhone8 64GB"
            android:textStyle="bold"
            android:textSize="13sp"
            android:textColor="@android:color/black"/>

        <TextView android:id="@+id/tv_si_des"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/img_si_icon"
            android:layout_below="@id/tv_si_name"
            android:text="4.7寸白色 移动联通电信4G手机"
            android:textSize="11sp"
            android:textColor="@color/color_808080"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_toRightOf="@id/img_si_icon"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="10dp">

            <TextView android:id="@+id/tv_si_money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="¥ 5888.00"
                android:textSize="12sp"
                android:textStyle="bold"
                android:textColor="@color/color_E51C23"/>

            <TextView android:id="@+id/tv_si_credit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_si_money"
                android:text=" 6666526"
                android:textSize="12sp"
                android:textColor="@color/color_139E91"
                android:drawableLeft="@mipmap/credit_icon"
                android:layout_marginTop="5dp"/>

            <TextView
                android:layout_width="70dp"
                android:layout_height="25dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:text="购买"
                android:textColor="@color/color_E51C23"
                android:textSize="13sp"
                android:gravity="center"
                android:background="@drawable/bg_recommended_buy"/>

        </RelativeLayout>

    </RelativeLayout>


</RelativeLayout>
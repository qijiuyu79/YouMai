<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/half_transparent"
    android:paddingBottom="17dp">

    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="118dp"
        android:background="@drawable/white_share"
        android:layout_alignParentBottom="true"
        android:gravity="center"
        android:layout_marginRight="17dp"
        android:layout_marginLeft="17dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <com.youmai.project.view.ClickImageView
                android:id="@+id/img_share_wx"
                android:layout_width="59dp"
                android:layout_height="59dp"
                android:src="@mipmap/wx_icon"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="微信"
                android:textColor="@color/color_7e7e7e"
                android:textSize="12sp"
                android:layout_marginTop="12dp"/>

        </LinearLayout>

        <View
            android:layout_width="0.5dp"
            android:layout_height="match_parent"
            android:background="#E0E0E0"
            android:layout_marginTop="25dp"
            android:layout_marginBottom="25dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <com.youmai.project.view.ClickImageView
                android:id="@+id/img_share_wxp"
                android:layout_width="59dp"
                android:layout_height="59dp"
                android:src="@mipmap/wx_friend"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="微信朋友圈"
                android:textColor="@color/color_7e7e7e"
                android:textSize="12sp"
                android:layout_marginTop="12dp"/>

        </LinearLayout>

    </LinearLayout>
   

</RelativeLayout>